<ul class="media-list">
  <% microposts.each do |micropost| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(micropost.user, { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to micropost.user.name, user_path(micropost.user) %> <span class="text-muted">posted at <%= micropost.created_at %></span>
        </div>
        <div>
          <p><%= micropost.content %></p>
        </div>
        <div class>
          <% if current_user == micropost.user %>
            <%= link_to "Delete", micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %> 
          
          <% if micropost.favoriting?(current_user) %>
            <%= form_for(current_user.favorite_relationships.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
              <%= hidden_field_tag :micropost_id, micropost.id %>
              <%= f.submit '★', class: 'btn btn-warning btn-xs' %>
            <% end %>
          <% else %>
            <%= form_for(current_user.favorite_relationships.build()) do |f| %>
              <%= hidden_field_tag :micropost_id, micropost.id %>
              <%= f.submit '☆', class: 'btn btn-default btn-xs' %>
            <% end %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate microposts %>
</ul>